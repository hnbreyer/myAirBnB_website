<body>

<section class="stays">
    <div class="container">
        <h5 class="section-head">
            <span class="heading">Listings</span>
        </h5>

        <br>
        <a href="/admin_listings/Edit" class="modal-btn">Add a listing</a>
        <br><br>

        <div class="row">
            {{#if hasListings}} {{#each listings}}
            <div class="col-md-6 col-lg-4">
                <div class="card">
                    <img src="/photos/{{filename}}" alt="" class="card-img-top img-fluid"/>

                    <div class="card-body">
                        <h4 class="card-title">{{listingName}}, {{location}}</h4>
                        <p class="card-text">Price: {{price}}</p>
                        <div class="row justify-content-center">
                        <button class=" col-3 btn-secondary btn-sm" type="submit">
                            <a href="/admin_listings/Delete/{{_id}}">Delete</a>
                        </button> 
                        <br>
                       <button class="col-3 btn-secondary btn-sm" type="submit">
                           <a href="/admin_listings/Edit/{{_id}}">Edit</a>
                       </button> 
                       </div>


                    </div>
                </div>
            </div>
            {{/each}}{{/if}}
        </div>


    </div>
</section>

