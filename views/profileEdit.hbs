{{> header user}}
</div>
<body>
    <div class="container">
        <div class="card text-center"  style="height: 100vh"></div>

         <h1>User Profile</h1>  

         <form action="/profile/Edit" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="uname" value="{{user.username}}"/>
            <label>Username: </label>{{user.username}}<br/>
            <label>First Name: </label><input type="text" name="fname" value="{{user.fname}}"><br/>
            <label>Last Name: </label><input type="text" name="lname" value="{{user.lname}}"><br/>
            <label>E-mail: </label><input type="text" name="email" value="{{user.email}}"><br/>
           
            <button type="submit" name="submit">Submit</button>
        </form>
        
   
    </div>


