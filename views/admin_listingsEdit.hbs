</div>
<body>
    <div class="container">

              <div class="" >
                <div class=""  style="height: 100vh">

                    <div class="card-body"  style="margin-top: 10rem">
                      
                       <form method="POST" class="form-group" action="/admin_listings/Edit" enctype="multipart/form-data">
                       <div class="form-row justify-content-center">
                            
  
                           <div class="col-8">
                                <h4 class="display-4">Listings editor</h4>
                                <br>
                            {{#if listings._id}}
                                <input type="hidden" name="id" value="{{listings._id}}"/>
                                <input type="hidden" name="edit" value="1" />
                                <h4>Editing listing: {{listings.listingName}}</h4>
                            {{else}}
                                <input type="hidden" name="edit" value="0"/>
                            {{/if}}
                            <label class="label">Listing name</label><input class="form-control" type="text" name="listingname" value="{{listings.listingName}}" required><br>
                            <label>Location</label><input class="form-control" type="text" name="location" value="{{listings.location}}" required><br>
                            <label>Price</label><input class="form-control" type="number" name="price" value="{{listings.price}}" required><br>
                            <label>Details</label><input class="form-control" type="text" name="details" value="{{listings.details}}" required><br>
                            <label>Host</label><input class="form-control" type="text" name="host" value="{{listings.host}}" required><br>
                            <label>Photo</label><input class="form-control-file" type="file" name="photo" id="photo" required><br>
                            
                            <label></label><button class="btn-secondary btn-lg" type="submit" name="submit">Submit</button>
                           </div>
                       </div>
                       </form>
                  
                    </div>

                </div>
         
    </div>
    </div>


